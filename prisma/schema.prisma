// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}


model User {
  id Int @id @default(autoincrement())
  userName String
  name String
  email String
  phone String
  password String
  tfa String
  successLogins Int
  failedLogins Int
  popularSites String
  currentChallenge String
  tokenVersion Int
}

model KeysAuthenticator {
  id Int @id @default(autoincrement())
  credentialId String
  credentialPublicKey String
  counter Int
  transports String
  owner String
  blacklist Boolean
  name String
}

model Key {
  id Int @id @default(autoincrement())
  owner String
  authenticator Int
}

model Sites {
  id Int @id @default(autoincrement())
  owner String
  website String
  hash String
  blacklist String
}